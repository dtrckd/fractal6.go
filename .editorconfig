# http://editorconfig.org/

root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{js,jsx,json,html}]
indent_style = space
indent_size = 4

[*.css]
indent_style = space
indent_size = 4

[i18n/**.json]
indent_size = 2

[*.go]
indent_style = space
indent_size = 4

[Makefile,*.mk]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
